#include <iostream>
#include "Game.h"

//using namespace sf;

int main()
{
	//Init srand
//	std::srand(static_cast<unsigned>(time(NULL)));

	//Init Game engine
	Game game;

	//Game loop
	while (game.running() && !game.getEndGame())
	{
		while (game.StartScreen)
		{
				game.displayStartScreen();
				if (sf::Keyboard::isKeyPressed(sf::Keyboard::Return))
				{	
					game.StartScreen = false;
					game.firstplatforms = true;
					break;	
				}
		}		
		while(!game.StartScreen)
		{//Update
			game.update();
			if(game.GameOver)
			{ 
			  
			  break;
			
			}
		
			game.render();
		}
		game.renderGameOver();
		
		
	}

	//End of application
	return 0;
}
